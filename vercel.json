{
  "version": 2,
  "builds": [
    {
      "src": "ayursutra/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "ayursutra/backend/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/ayursutra/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/ayursutra/frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "cd ayursutra/frontend && npm install",
  "buildCommand": "cd ayursutra/frontend && npm run build"
}
